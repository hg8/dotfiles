#!/usr/bin/env bash
while true
do
    export DISPLAY=:0.0
    battery_percent=$(acpi -b | grep -P -o '[0-9]+(?=%)')
    if on_ac_power; then
        if [ "$battery_percent" -gt 98 ]; then
            notify-send -t 60 -u normal "Charge Complete" "The battery is fully charged."
        fi
    else
		if [ "$battery_percent" -lt 5 ]; then
			notify-send -t 60 -u critical "Low Battery" "$battery_percent% left."
		fi

	fi	
    sleep 300 # (5 minutes)
done

