#!/usr/bin/env python3

import os
import webbrowser
import requests

if os.environ.get("BLOCK_BUTTON") == "1":
    webbrowser.open_new_tab('http://bitcoinity.org/markets/bitstamp/EUR')

try:
    r = requests.get('https://www.bitstamp.net/api/ticker/')
    ticker = r.json()

    print('%.2f$' % float(ticker['last']))
except:
    print('error')
    print('error')
    print('#ff0000')
