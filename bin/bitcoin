#!/usr/bin/env python

import requests

try:
    r = requests.get('https://api.kraken.com/0/public/Ticker?pair=XXBTZUSD')
    ticker = r.json()
    price = ticker['result']['XXBTZUSD']['c'][0]
    price = int(float(price))

    print(' {:,} '.format(price))

except Exception:
    print('error')
    print('error')
    print('#ff0000')
