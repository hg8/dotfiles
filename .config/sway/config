client.urgent           #ebcb8b #ebcb8b #2e3440 #8fbcbb   #ebcb8b

bindsym Print exec /usr/share/sway/scripts/grimshot --notify save area  $HOME/Downloads/screenshot_$(date "+%y%m%d%H%M%S").png

include /etc/sway/config.d/*

