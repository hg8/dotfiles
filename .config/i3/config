client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $bg-color

#Power Management
set $mode_system (l)ock | (r)eboot | (S)hutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id ~/bin/power/lock, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym r exec --no-startup-id ~/bin/power/reboot, mode "default"
	bindsym Shift+s exec --no-startup-id ~/bin/power/shutdown, mode "default" 

	# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    }
bindsym $mod+Escape mode "$mode_system"

smart_gaps on
gaps inner 5

